    <script>
              
function toggleBasePrice() {
    const auctionType = document.getElementById('auctionType').value;
    const basePriceContainer = document.getElementById('basePriceContainer');
    const basePriceInput = document.getElementById('basePrice');
    
    if (auctionType === 'Reserve') {
        basePriceContainer.style.display = 'block';
        basePriceInput.required = true;
        basePriceInput.value = '';
    } else {
        basePriceContainer.style.display = 'none';
        basePriceInput.required = false;
        basePriceInput.value = '0';
    }
}

        let selectedImages = [];
        const maxImages = 5;

        function openFileDialog() {
            if (selectedImages.length < maxImages) {
                document.getElementById('fileInput').click();
            }
        }

        document.getElementById('fileInput').addEventListener('change', function(e) {
            const files = Array.from(e.target.files);
            const remainingSlots = maxImages - selectedImages.length;
            const filesToAdd = files.slice(0, remainingSlots);

            filesToAdd.forEach(file => {
                if (file.type.startsWith('image/')) {
                    const reader = new FileReader();
                    reader.onload = function(event) {
                        const imageData = {
                            id: Date.now() + Math.random(),
                            file: file,
                            url: event.target.result,
                            name: file.name,
                            size: file.size
                        };
                        selectedImages.push(imageData);
                        updateDisplay();
                    };
                    reader.readAsDataURL(file);
                }
            });

            // Reset file input
            e.target.value = '';
        });

        function removeImage(id) {
            selectedImages = selectedImages.filter(img => img.id !== id);
            updateDisplay();
        }

        function updateDisplay() {
            const slots = document.querySelectorAll('.upload-slot');
            const counter = document.getElementById('counter');
            const previewSection = document.getElementById('previewSection');
            const previewList = document.getElementById('previewList');
            const successMsg = document.getElementById('successMsg');

            // Update counter
            counter.textContent = selectedImages.length;

            // Reset all slots
            slots.forEach((slot, index) => {
                slot.classList.remove('filled');
                slot.innerHTML = `
                    <svg class="camera-icon" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
                    </svg>
                    <div class="upload-text">${index === 0 ? 'Add Photo' : ''}</div>
                `;
                slot.onclick = openFileDialog;
            });

            // Fill slots with images
            selectedImages.forEach((image, index) => {
                if (index < 5) {
                    slots[index].classList.add('filled');
                    slots[index].innerHTML = `
                        <img src="${image.url}" alt="${image.name}">
                        <button class="remove-btn" onclick="removeImage(${image.id})">×</button>
                    `;
                    slots[index].onclick = null;
                }
            });

            // Update preview section
            if (selectedImages.length > 0) {
                previewSection.style.display = 'block';
                previewList.innerHTML = selectedImages.map(image => `
                    <div class="preview-item">
                        <img src="${image.url}" alt="${image.name}" class="preview-img">
                        <div class="preview-info">
                            <div class="preview-name">${image.name}</div>
                            <div class="preview-size">${(image.size / 1024 / 1024).toFixed(2)} MB</div>
                        </div>
                        <button class="remove-preview-btn" onclick="removeImage(${image.id})">Remove</button>
                    </div>
                `).join('');
            } else {
                previewSection.style.display = 'none';
            }

            // Show success message
            if (selectedImages.length === maxImages) {
                successMsg.style.display = 'block';
            } else {
                successMsg.style.display = 'none';
            }
        }

        // Pincode to City/State API
        document.getElementById("pincode").addEventListener("input", function(){
            let pincode = this.value.trim();
            if(pincode.length === 6){
                fetch(`https://api.postalpincode.in/pincode/${pincode}`)
                .then(res => res.json())
                .then(data => {
                    if (data[0].Status === "Success") {
                        let postOffice = data[0].PostOffice[0];
                        document.getElementById("city").value = postOffice.Name; // City
                        document.getElementById("state").value = postOffice.State;   // State
                    } else {
                        document.getElementById("city").value = "Invalid Pincode";
                        document.getElementById("state").value = "";
                    }
                })
                .catch(err => console.error(err));
            } else if (pincode.length === 0) {
                document.getElementById("city").value = "";
                document.getElementById("state").value = "";
            }
        });

        // Form validation
        document.querySelector('form').addEventListener('submit', function(e) {
            e.preventDefault();
            const form = this;
            let isValid = true;
            // Validate required fields
            const requiredFields = form.querySelectorAll('[required]');
            requiredFields.forEach(field => {
                if (!field.value.trim() && field.type !== 'file') {
                    field.style.borderColor = 'red';
                    isValid = false;
                } else {
                    field.style.borderColor = '#ccc';
                }
            });
            // Special validation for file upload
            if (selectedImages.length !== 5) {
                showInPageAlert('Please upload exactly 5 photos of the bicycle.');
                isValid = false;
            }
            // Validate pincode
            const pincode = document.getElementById('pincode').value.trim();
            if (pincode.length !== 6) {
                showInPageAlert('Please enter a valid 6-digit PIN code');
                isValid = false;
            }
            if (!isValid) return;
            // Build FormData
            const formData = new FormData();
            Array.from(form.elements).forEach(el => {
                if (el.name && el.type !== 'file' && el.type !== 'submit') {
                    formData.append(el.name, el.value);
                }
            });
            selectedImages.forEach(img => {
                formData.append('bicyclesPhotos', img.file);
            });
            fetch(form.action, {
                method: 'POST',
                body: formData
            })
            .then(async response => {
                if (response.ok) {
                    showInPageAlert('Form submitted successfully!');
                    window.location.reload();
                } else {
                    const data = await response.json();
                    showInPageAlert(data.error || 'Submission failed');
                }
            })
            .catch(err => {
                showInPageAlert('Submission failed: ' + err.message);
            });
        });
